@model Model.SuperuserDTO
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Inlogging</title>
</head>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                
                    <h4 class="title">Admin login</h4>
                    <button type="button" class="close"></button>
                
                
                    <div class="row">
                        <div class="col-md-12">
                            <span class="fa fa-user"></span>
                            <label>Brukernavn</label>
                            <div class="input-group">
                                <div class="col-md-3">
                                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                <div class="col-md-9">
                                    @{ Html.ValidateFor(d => d.Username); }
                                    @Html.ValidationMessageFor(d => d.Username, null, new { @class = "text-info" })
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <span class="fa fa-lock"></span>
                            <label>Passord</label>
                            <div class="input-group">
                                <div class="col-md-3">
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                                </div>
                                <div class="col-md-9">
                                    @{ Html.ValidateFor(d => d.Password); }
                                    @Html.ValidationMessageFor(d => d.Password, null, new { @class = "text-info" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <button type="submit" class="btn btn-success">Login</button>
                            <button type="button" class="btn btn-danger">Avbryt</button>
                        </div>
                    </div>
               
            }
   